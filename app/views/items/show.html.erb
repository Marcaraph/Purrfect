
<div class="container-fluid">
  <div class="row">
    <div class="col-md-6 picture-container">
    <%if @item.picture.attached?%>
      <%= image_tag @item.picture, class:"img-fluid", alt: 'picture of cat' %>
    <%else%>
      <img class="card-img-top" src="https://media.istockphoto.com/id/508030340/fr/photo/sunny-chat.jpg?s=2048x2048&w=is&k=20&c=Pwg60DIr0iYbQLwDXCHfdhfUgRKq7UdQsq6bfyAIaGA=" alt="Image de petit chaton beaucoup trop mignon">
    <%end%>

    <div class="col-md-6 show-item-text">
      <div class="p-5">
        <div id="details">
          <h2>Details :<%= @item.title %></h2>
          <ul>
            <li>Breed: Berger Allemand</li>
            <li>Colour: Rainbow</li>
            <li>Photo by: Nicolas Hulot</li>
          </ul>
        </div>
        <div id="item-description">
          <h2>Description</h2>
          <p> <%= @item.description %> </p>
        </div>
        <div>
          <h2>Price: $<%= @item.price %></h2>
          <p>Delivery within 2 business days.</p>
        </div>
        <div>
          <% if user_signed_in? %>
          <%= button_to "Add to cart", cart_items_path, method: :post, params: { item: @item }, class: "btn btn-primary" %>
          <% else %>
          <%= link_to "Add to cart", new_user_session_path, class: "btn btn-primary" %>
          <% end %>
          <%= link_to "Back to items", items_path, class: "btn btn-secondary m-3"%>
        </div>
      </div>
    </div>
  </div>
</div>
